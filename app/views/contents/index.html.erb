<p id="notice"><%= notice %></p>

<div id="menu-list">
  <h4>Menu: </h4>
  <h4><a href="/categories">categories list</a></h4>
</div>

<h1>Contents List</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contents.each do |content| %>
      <tr>
        <td><%= content.title %></td>
        <td><%= content.description %></td>
        <td><a href="categories/listing/<%= content.category_id %>"><%= content.content_category %></a></td>
        <td><%= link_to 'view', content %></td>
        <td><%= link_to 'edit', edit_content_path(content) %></td>
        <td><%= link_to 'delete', content, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

