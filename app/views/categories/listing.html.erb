<div id="menu-list">
  <h4>Menu: </h4>
  <h4><a href="/contents">content list</a></h4>
  <h4><a href="/categories">categories list</a></h4>
</div>

<h1>Contents of <%= @category_name %></h1>

<table>
  <thead>
  <tr>
    <th>Title</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @content_list.each do |content| %>
      <tr>
        <td><%= content.title %></td>
        <td>list</td>
        <td><%= link_to 'view', content %></td>
        <td><%= link_to 'edit', edit_content_path(content) %></td>
        <td><%= link_to 'delete', content, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  <% end %>
  </tbody>
</table>

<br>

